<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Tarea2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resultado: "
        android:id="@+id/textViewResultado"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/buttonPlus"
        android:layout_below="@+id/textViewResultado"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/buttonLess"
        android:layout_alignTop="@+id/buttonPlus"
        android:layout_toEndOf="@+id/buttonPlus"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/buttonMul"
        android:layout_alignBottom="@+id/buttonLess"
        android:layout_toEndOf="@+id/buttonLess"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/buttonDiv"
        android:layout_alignTop="@+id/buttonMul"
        android:layout_toEndOf="@+id/buttonMul"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/buttonCero"
        android:layout_toStartOf="@+id/buttonLess"
        android:layout_below="@+id/buttonPlus"
        android:layout_alignParentStart="true"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/buttonUno"
        android:layout_below="@+id/buttonLess"
        android:layout_toEndOf="@+id/buttonPlus"
        android:layout_toStartOf="@+id/buttonMul"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/buttonDos"
        android:layout_alignBottom="@+id/buttonUno"
        android:layout_toEndOf="@+id/buttonUno"
        android:layout_toStartOf="@+id/buttonDiv"
        android:onClick="clickedButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/buttonTres"
        android:layout_alignBottom="@+id/buttonDos"
        android:layout_alignStart="@+id/buttonDiv"
        android:layout_alignEnd="@+id/buttonDiv"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/buttonCuatro"
        android:layout_toStartOf="@+id/buttonLess"
        android:layout_below="@+id/buttonCero"
        android:layout_alignParentStart="true"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/buttonCinco"
        android:layout_toStartOf="@+id/buttonDos"
        android:layout_alignBottom="@+id/buttonCuatro"
        android:layout_toEndOf="@+id/buttonCuatro"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/buttonSeis"
        android:layout_toStartOf="@+id/buttonLess"
        android:layout_alignBottom="@+id/buttonCinco"
        android:layout_toEndOf="@+id/buttonCinco"
        android:layout_alignEnd="@+id/buttonDos"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/buttonSiete"
        android:layout_toStartOf="@+id/buttonLess"
        android:layout_alignBottom="@+id/buttonSeis"
        android:layout_alignStart="@+id/buttonTres"
        android:layout_alignEnd="@+id/buttonTres"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/buttonOcho"
        android:layout_toStartOf="@+id/buttonLess"
        android:layout_below="@+id/buttonCuatro"
        android:layout_alignParentStart="true"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/buttonNueve"
        android:layout_toStartOf="@+id/buttonSeis"
        android:layout_alignBottom="@+id/buttonOcho"
        android:layout_toEndOf="@+id/buttonOcho"
        android:onClick="clickedButton"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:id="@+id/buttonSolve"
        android:layout_toStartOf="@+id/buttonLess"
        android:layout_alignBottom="@+id/buttonNueve"
        android:layout_toEndOf="@+id/buttonNueve"
        android:layout_alignEnd="@+id/buttonSiete"
        android:onClick="clickedButton"/>

</RelativeLayout>
